---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

// ✅ Importa el CSS desde src para que Astro lo bundlee correctamente en producción
import "../styles/global.css";

const { title = "Portfolio", description = "" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />

    <!-- Theme before paint -->
    <script is:inline>
      const key = "theme";
      let saved = null;
      try { saved = localStorage.getItem(key); } catch {}
      const theme = (saved === "light" || saved === "dark") ? saved : "dark";
      document.documentElement.classList.toggle("dark", theme === "dark");
    </script>

    <!-- Theme handler (public/) -->
    <script src="/theme.js" defer></script>

    <!-- i18n runtime (public/) -->
    <script src="/translations.js" defer></script>
    <script src="/i18n.js" defer></script>
    <script src="/client-init.js" defer></script>

    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=2" data-favicon-light />
    <link rel="icon" type="image/svg+xml" href="/favicon-dark.svg?v=2" data-favicon-dark />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v=1" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#0b1220" />
  </head>

  <body class="min-h-screen">
    <Header />

    <main class="mx-auto w-full max-w-5xl px-4 sm:px-6 lg:px-8 py-10">
      <slot />
    </main>

    <Footer />
  </body>
</html>