---
import BaseLayout from "../layouts/BaseLayout.astro";

// ⚙️ Configuración de redes (pon tus enlaces reales)
const SOCIALS = {
  github: "https://github.com/alvsheeesh",
  linkedin: "https://www.linkedin.com/in/alvaro-silva-677b4a331",
  email: "mailto:silvachavez07@gmail.com",
};

// ⚙️ Datos de contacto (puedes vaciar phone si no quieres mostrarlo)
const CONTACT = {
  email: "silvachavez07@gmail.com",
  locationLabel: "Terrassa · Catalonia",
};

// ⚙️ Enlace al mapa (puedes desactivar el bloque del mapa si no quieres mostrar ubicación)
const MAP_EMBED =
  "https://maps.google.com/maps?q=Terrassa&t=&z=12&ie=UTF8&iwloc=&output=embed";
---

<BaseLayout title="Contact • Álvaro Silva" description="Get in touch">
  <section class="space-y-8">
    <!-- Título y subtítulo -->
    <header class="space-y-2">
      <h1
        class="text-3xl sm:text-4xl font-bold tracking-tight text-[color:var(--text)]"
        data-i18n="contact.title"
      >
        Contact
      </h1>
      <p
        class="text-[color:var(--muted)] max-w-3xl"
        data-i18n="contact.intro"
      >
        This is a demo form. You can also reach out via email.
      </p>
    </header>

    <!-- Grid principal: Form + Sidebar -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- FORM DEMO -->
      <form class="rounded-2xl border border-border bg-card p-6 space-y-5" novalidate>
        <h2
          class="text-lg font-semibold text-[color:var(--text)]"
          data-i18n="contact.form.title"
        >
          Send a message
        </h2>
        <p
          class="text-sm text-[color:var(--muted)]"
          data-i18n="contact.form.notice"
        >
          This form does not send data. Use the email button below.
        </p>

        <!-- Name + Email -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div class="space-y-1">
            <label class="text-sm" data-i18n="contact.form.name">Name</label>
            <input
              class="w-full rounded-lg border border-[color:var(--border)] bg-[color:var(--bg)] px-3 py-2"
              type="text"
              name="name"
              data-i18n-attr="placeholder: contact.placeholder.name; aria-label: contact.form.name"
              placeholder="Your name"
            />
          </div>
          <div class="space-y-1">
            <label class="text-sm" data-i18n="contact.form.email">Email</label>
            <input
              class="w-full rounded-lg border border-[color:var(--border)] bg-[color:var(--bg)] px-3 py-2"
              type="email"
              name="email"
              data-i18n-attr="placeholder: contact.placeholder.email; aria-label: contact.form.email"
              placeholder="your@email.com"
            />
          </div>
        </div>

        <!-- Subject -->
        <div class="space-y-1">
          <label class="text-sm" data-i18n="contact.form.subject">Subject</label>
          <input
            class="w-full rounded-lg border border-[color:var(--border)] bg-[color:var(--bg)] px-3 py-2"
            type="text"
            name="subject"
            data-i18n-attr="placeholder: contact.placeholder.subject; aria-label: contact.form.subject"
            placeholder="Subject"
          />
        </div>

        <!-- Message -->
        <div class="space-y-1">
          <label class="text-sm" data-i18n="contact.form.message">Message</label>
          <textarea
            class="min-h-[140px] w-full rounded-lg border border-[color:var(--border)] bg-[color:var(--bg)] px-3 py-2"
            name="message"
            data-i18n-attr="placeholder: contact.placeholder.message; aria-label: contact.form.message"
            placeholder="How can I help?"
          ></textarea>
        </div>

        <!-- Acciones -->
        <div class="flex flex-wrap gap-3">
          <button type="button" class="btn btn-primary" data-i18n="contact.form.send">
            Send
          </button>

          <a
            class="btn"
            href={SOCIALS.email}
            data-i18n="contact.form.mailto"
            data-i18n-attr="title: contact.form.mailto"
          >
            Contact via email
          </a>
        </div>
      </form>

      <!-- SIDEBAR: datos + redes + mapa -->
      <aside class="rounded-2xl border border-border bg-card p-6 space-y-5">
        <h2
          class="text-lg font-semibold text-[color:var(--text)]"
          data-i18n="contact.side.title"
        >
          Other ways to reach me
        </h2>

        <p class="text-sm text-[color:var(--muted)]" data-i18n="contact.side.p1">
          You can also contact me directly via email or through my professional social profiles:
        </p>

        <!-- Datos de contacto -->
        <ul class="space-y-2 text-sm">
          <li>
            <span class="text-[color:var(--muted)]" data-i18n="contact.side.emailLabel">Email:</span>
            <a
              class="ml-1 underline hover:text-[color:var(--accent)]"
              href={`mailto:${CONTACT.email}`}
              rel="noopener noreferrer"
            >
              {CONTACT.email}
            </a>
          </li>
          <li>
          </li>
          <li>
            <span class="text-[color:var(--muted)]" data-i18n="contact.side.locationLabel">Location:</span>
            <span class="ml-1">{CONTACT.locationLabel}</span>
          </li>
        </ul>

        <!-- Redes sociales con iconos inline (sin JSX) -->
        <div class="space-y-2">
          <h3 class="font-medium text-[color:var(--text)]" data-i18n="contact.side.socialTitle">Social</h3>
          <div class="flex flex-wrap gap-2">
            <!-- GitHub -->
            <a
              href={SOCIALS.github}
              target="_blank"
              rel="noopener noreferrer"
              class="btn px-3 py-2"
              data-i18n-attr="title: contact.side.openProfile"
            >
              <span class="inline-flex items-center gap-2">
                <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true" class="shrink-0">
                  <path fill="currentColor" d="M12 .5a12 12 0 0 0-3.79 23.38c.6.11.82-.26.82-.58v-2.1c-3.34.73-4.04-1.6-4.04-1.6-.55-1.4-1.34-1.78-1.34-1.78-1.09-.74.08-.73.08-.73 1.2.09 1.84 1.24 1.84 1.24 1.07 1.83 2.82 1.3 3.51.99.11-.77.42-1.29.76-1.59-2.66-.3-5.47-1.33-5.47-5.92 0-1.31.47-2.38 1.24-3.22-.12-.31-.54-1.56.12-3.25 0 0 1.01-.32 3.3 1.23a11.5 11.5 0 0 1 6.01 0c2.29-1.55 3.3-1.23 3.3-1.23.66 1.69.24 2.94.12 3.25.77.84 1.24 1.9 1.24 3.22 0 4.6-2.81 5.61-5.49 5.91.43.37.81 1.1.81 2.22v3.29c0 .32.21.7.82.58A12 12 0 0 0 12 .5Z"/>
                </svg>
                <span data-i18n="contact.social.github">GitHub</span>
              </span>
            </a>

            <!-- LinkedIn -->
            <a
              href={SOCIALS.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="btn px-3 py-2"
              data-i18n-attr="title: contact.side.openProfile"
            >
              <span class="inline-flex items-center gap-2">
                <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true" class="shrink-0">
                  <path fill="currentColor" d="M4.98 3.5a2.5 2.5 0 1 1 0 5.001 2.5 2.5 0 0 1 0-5zM3 9h4v12H3zM10 9h3.8v1.64h.05c.53-1 1.8-2.05 3.7-2.05 3.96 0 4.7 2.6 4.7 6v6h-4v-5.33c0-1.27-.03-2.9-1.76-2.9-1.77 0-2.04 1.38-2.04 2.81V21h-4V9z"/>
                </svg>
                <span data-i18n="contact.social.linkedin">LinkedIn</span>
              </span>
            </a>

            <!-- Email -->
            <a
              href={SOCIALS.email}
              target="_blank"
              rel="noopener noreferrer"
              class="btn px-3 py-2"
              data-i18n-attr="title: contact.side.openProfile"
            >
              <span class="inline-flex items-center gap-2">
                <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true" class="shrink-0">
                  <path fill="currentColor" d="M20 4H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2Zm0 4-8 5L4 8V6l8 5 8-5Z"/>
                </svg>
                <span data-i18n="contact.social.email">Email</span>
              </span>
            </a>
          </div>
        </div>

        <!-- Mapa (opcional) -->
        <div class="space-y-2">
          <h3 class="font-medium text-[color:var(--text)]" data-i18n="contact.side.mapTitle">Map</h3>
          <div class="overflow-hidden rounded-xl border border-[color:var(--border)]">
            <iframe
              src={MAP_EMBED}
              width="100%"
              height="260"
              style="border:0;"
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              aria-label="Map"
            ></iframe>
          </div>
        </div>

        <!-- CTA cierre -->
        <a
          class="btn btn-primary"
          href={`mailto:${CONTACT.email}`}
          data-i18n="contact.side.cta"
          data-i18n-attr="title: contact.side.cta"
        >
          Email me
        </a>
      </aside>
    </div>
  </section>
</BaseLayout>
